<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/crdroid_settings_title" >
      
        <!-- UserInterface -->
        <Preference
            android:icon="@drawable/ic_themes"
            android:title="@string/ui_title"
            android:summary="@string/user_summary"
            settings:layout="@layout/matrixx_dashboard_preference_top"
            android:fragment="com.crdroid.settings.fragments.UserInterface" />

        <!-- Lockscreen -->
        <Preference
            android:icon="@drawable/ic_settings_lockscreens"
            android:title="@string/lockscreen_title"
            android:summary="@string/lockscreen_summary"
            settings:layout="@layout/matrixx_dashboard_preference_middle"
            android:fragment="com.crdroid.settings.fragments.LockScreen" />

        <!-- QuickSettings -->
        <Preference
            android:icon="@drawable/ic_settings_quicksettings"
	        android:title="@string/quicksettings_title"
            android:summary="@string/quick_summary"
            settings:layout="@layout/matrixx_dashboard_preference_bottom"
            android:fragment="com.crdroid.settings.fragments.QuickSettings" />

        <!-- Statusbar -->   
        <Preference
            android:icon="@drawable/ic_settings_statusbar"
            android:title="@string/statusbar_title"
            android:summary="@string/status_summary"
            settings:layout="@layout/matrixx_dashboard_preference_top"
            android:fragment="com.crdroid.settings.fragments.StatusBar" />  

        <!-- Notifications -->
        <Preference
            android:icon="@drawable/ic_message_fast"
            android:title="@string/notifications_title"
            android:summary="@string/notification_summary"
            settings:layout="@layout/matrixx_dashboard_preference_middle"
            android:fragment="com.crdroid.settings.fragments.Notifications" />

        <!-- Sound -->
         <Preference
            android:icon="@drawable/ic_settings_sound"
            android:title="@string/sound_title"
            android:summary="@string/sound_summary"
            settings:layout="@layout/matrixx_dashboard_preference_bottom"
            android:fragment="com.crdroid.settings.fragments.Sound" />


        <!-- Buttons -->
        <Preference
            android:icon="@drawable/ic_shapes"
	        android:title="@string/button_title"
            android:summary="@string/bottom_summary"
            settings:layout="@layout/matrixx_dashboard_preference_top"
            android:fragment="com.crdroid.settings.fragments.Buttons" />
        
        <!-- Navigation -->
        <Preference
            android:icon="@drawable/ic_navbar"
            android:title="@string/navigation_title"
            android:summary="@string/navigation_summary"
            settings:layout="@layout/matrixx_dashboard_preference_middle"
            android:fragment="com.crdroid.settings.fragments.Navigation" />

        <!-- Misc -->
        <Preference
            android:icon="@drawable/ic_settings_miscs"
            android:title="@string/misc_title"
            android:summary="@string/mice_summary"
            settings:layout="@layout/matrixx_dashboard_preference_middle"
            android:fragment="com.crdroid.settings.fragments.Miscellaneous" />

        <!-- About -->
        <Preference
            android:icon="@drawable/ic_settings_about"
            android:title="@string/about_matrixx"
            android:summary="@string/about_matrixx_summary"
            settings:layout="@layout/matrixx_dashboard_preference_bottom"
            android:fragment="com.crdroid.settings.fragments.About" />
</PreferenceScreen>
